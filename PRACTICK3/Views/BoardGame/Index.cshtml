@using PRACTICK3.Models;
@model List<Boardgame>
@{
    ViewBag.Title = "BoardGame Page";
}

<h2>List of board games</h2>
@Html.ActionLink("Register New", "AddGame")
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            ProductName
        </th>
        <th>
            Description

        </th>
        <th>
            Image

        </th>
        <th>
            Coast

        </th>
        <th>
            Rang

        </th>
        <th>
            Count

        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
     
            <td>
                @Html.DisplayFor(modelItem => item.Coast)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.Rang)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>

            <td>
                @Html.ActionLink("Edit","EditGame", new { id = item.ProductId })
                @Html.ActionLink("Details", "DetailsOfGame", new { id = item.ProductId })
                @Html.ActionLink("Delete", "DeleteGame", new { id = item.ProductId })
            </td>
        </tr>
        }
    </table>